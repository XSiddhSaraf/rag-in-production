# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, azure_search
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Azure Cognitive Search (if using)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=eu-ai-act-index

# Application Configuration
UPLOAD_FOLDER=./data/uploads
OUTPUT_FOLDER=./data/outputs
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,doc

# EU AI Act Document Path
EU_AI_ACT_PDF_PATH=./data/EU_AI_ACT.pdf

# Evaluation Configuration
EVAL_METRICS=faithfulness,answer_relevance,context_precision,context_recall
LLM_JUDGE_ENABLED=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
